<% if !flash[:notice].blank? %>
  <div class="alert alert-info">
    <%= flash[:notice] %>
  </div>
<% end %>
<h2>Your Profile</h2>
</br>
</br>
<div class="container">
  <div class="row">
<div class="container">
  <div class="container container-fluid">
    <div class="col-sm-offset-9 col-sm-3 right">
      <% if not Profile.exists?(user_id: current_user.id) %>
        <%= link_to "Add your Profile", new_profile_path, class: "btn btn-primary" %>
      <% end %>
    </div>
    </br>
    </br>
    <div class="row">
      <div class="col-sm-offset-4 col-sm-4">
        <p>
          <strong> Name: </strong>
          <% if Profile.exists?(user_id: current_user.id) %>
            <%= Profile.find_by_user_id(current_user.id).name %>
            <% else %>
            <%= current_user.name %>
          <% end %>
        </p>
        <p>
          <strong>No of Years of Work experience:</strong>
          <% if Profile.exists?(user_id: current_user.id) %>
          <%= Profile.find_by_user_id(current_user.id).no_of_workex_years %>
          <% else %>
          <% end %>
        </p>
        <p>
          <strong>Resume:</strong>
          <% if Profile.exists?(user_id: current_user.id) %>
          <%= link_to "Download Resume", Profile.find_by_user_id(current_user.id).attachment_url %>
          <% else %>
          <% end %>
        </p>
      </div>
    </div>
  </div>
</div>
    <% if Profile.exists?(user_id: current_user.id) %>
      <%= link_to 'Edit', edit_profile_path(Profile.find_by_user_id(current_user.id)), class: 'btn btn-primary btn-lg' %>
    <% else %>
    <% end %>
  </div>
</div>