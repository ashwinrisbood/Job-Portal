<div class="container">
  <div class="container">
<div class="row">

  <h2> <%= @company.name %> </h2>

  <h3>Website:
    <%= @company.website%>
  </h3>

  <div class="col-sm-offset-4 col-sm-4">
<p>
  <strong>Hq:</strong>
  <%= @company.Hq %>
</p>

<p>
  <strong>Size:</strong>
  <%= @company.size %>
</p>

<p>
  <strong>Founded:</strong>
  <%= @company.Founded %>
</p>

<p>
  <strong>Industry:</strong>
  <%= @company.industry %>
</p>

<p>
  <strong>Revenue:</strong>
  <%= @company.revenue %>
</p>

<p>
  <strong>Synopsis:</strong>
  <%= @company.synopsis %>
</p>
    <% if current_user.isAdmin == 'True' or current_user.isAdmin?%>
<%= link_to 'Edit', edit_company_path(@company), class: 'btn btn-primary btn-lg' %>
    <% end %>
<%= link_to 'Back', companies_path, class: 'btn btn-warning btn-lg' %>
</div>
</div>
</div>
</div>
