<h1>Applications</h1>
<%= form_tag(request.env['PATH_INFO'], method: :get, :enforce_utf8 => false) do %>
  <%= text_field_tag :search %>
  <%= submit_tag 'Search', name: nil%>
<% end %>
<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Job Position</th>
      <th>Current company</th>
      <th>Linkedin</th>
      <th>Add info</th>
      <th>Gender</th>
      <th>Race</th>
      <th>Disability</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @applications.each do |application| %>
  <div class="list-group-item-text" id="display_applications">
      <tr>
        <td><%= application.name %></td>
        <td><%= application.job.position %></td>
        <td><%= application.current_company %></td>
        <td><%= application.linkedin %></td>
        <td><%= application.add_info %></td>
        <td><%= application.gender %></td>
        <td><%= application.race %></td>
        <td><%= application.disability %></td>
        <td><%= application.user.name %></td>
        <td><%= link_to 'Show', application, class: 'btn btn-primary btn-lg btn-block' %></td>
        <td><%= link_to 'Edit', edit_application_path(application), class: 'btn btn-warning btn-lg btn-block' %></td>
        <td><%= link_to 'Withdraw', application, method: :delete, data: { confirm: 'Are you sure?' },class: 'btn btn-danger btn-lg btn-block' %></td>
      </tr>
  </div>
    <% end %>
  </tbody>
</table>
